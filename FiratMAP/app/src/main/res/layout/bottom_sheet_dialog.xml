<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:id="@+id/bottomSheetContainer"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/bottom_sheet_img"
            android:src="@drawable/ic_facility"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/t_name"
            android:padding="10dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="Location"
            android:textColor="@color/firatRed"/>
    </LinearLayout>
    <TextView
        android:id="@+id/bottom_sheet_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla maximus sodales velit, malesuada dictum sem euismod vitae. Fusce molestie dui in facilisis rutrum. Nam imperdiet odio a enim pharetra"
        android:textColor="@color/black"
        android:padding="7dp"
        android:maxLines="5"/>

    <LinearLayout
        android:id="@+id/bottom_sheet_departments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bölümler"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_marginHorizontal="20dp"/>
        <ListView
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/bottom_dep_list"
            tools:listitem="@layout/departments_list_item" />
    </LinearLayout>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="Find"
        android:id="@+id/bt_find"
        android:layout_marginTop="20dp"
        android:background="@mipmap/search"
        android:layout_gravity="center"/>
</LinearLayout>